<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="default" namespace="/" extends="struts-default">
        <action name="Start">
            <result>Start.jsp</result>
        </action>
    </package>

    <!-- "abstract" package, to be extended -->
    <package name="crudDefault" extends="default">
        <default-interceptor-ref name="paramsPrepareParamsStack"/>
    </package>

    <package name="empoyeeManager" namespace="/" extends="crudDefault">

        <action name="edit*" class="net.itneering.demo.struts2evolution.action.{1}Action" method="edit">
            <result>/WEB-INF/jsp/advanced/{1}/edit{1}.jsp</result>
        </action>

        <action name="save*" class="net.itneering.demo.struts2evolution.action.{1}Action" method="save">
            <result name="success" type="redirectAction" >
                <param name="actionName">edit{1}</param>
                <param name="model.id">${id}</param>
            </result>
            <result name="input">/WEB-INF/jsp/advanced/{1}/edit{1}.jsp</result>
        </action>

    </package>


</struts>
