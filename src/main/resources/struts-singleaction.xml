<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="employee" namespace="/singleaction/employee" extends="crud">

        <!-- Hier die unoptimierte Fassung - behandelt nur die EntitÃ¤t Employee -->
        <action name="editEmployee" class="net.itneering.demo.struts2evolution.action.singleaction.employee.EmployeeAction">
            <result>/WEB-INF/jsp/simple/Employee/editEmployee.jsp</result>
        </action>

        <action name="saveEmployee" class="net.itneering.demo.struts2evolution.action.singleaction.employee.EmployeeAction" method="save">
            <result name="success" type="redirectAction" >
                <param name="actionName">editEmployee</param>
                <param name="employee.id">${employee.id}</param>
            </result>
            <result name="input">/WEB-INF/jsp/simple/employeeSimple/editEmployee.jsp</result>
        </action>

    </package>

</struts>
